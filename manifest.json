{
  "manifest_version": 3,
  "name": "WebWall",
  "version": "0.1.0",
  "description": "Block distracting sites and elements to help you stay focused",
  "permissions": [
    "declarativeNetRequest",
    "storage",
    "alarms",
    "activeTab",
    "tabs"
  ],
  "host_permissions": [
    "*://*.instagram.com/*",
    "*://*.youtube.com/*",
    "*://*.reddit.com/*",
    "*://*.twitter.com/*",
    "*://*.x.com/*",
    "*://*.facebook.com/*",
    "*://*.tiktok.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/optimized/icon16.png",
    "32": "icons/optimized/icon32.png",
    "48": "icons/optimized/icon48.png",
    "128": "icons/optimized/icon128.png"
  },

  "action": {
    "default_popup": "popup.html",
    "default_title": "WebWall"
  },
  "options_page": "options.html",
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "static",
        "enabled": true,
        "path": "rules.json"
      }
    ]
  },
  "content_scripts": [
    {
      "matches": ["*://*.instagram.com/*"],
      "js": ["content-scripts/instagram.js"],
      "run_at": "document_start"
    },
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["content-scripts/youtube.js"],
      "run_at": "document_start"
    },
    {
      "matches": ["*://*.reddit.com/*"],
      "js": ["content-scripts/reddit.js"],
      "run_at": "document_start"
    },
    {
      "matches": ["*://*.twitter.com/*", "*://*.x.com/*"],
      "js": ["content-scripts/twitter.js"],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["blocked.html", "css/*", "js/*", "icons/*"],
      "matches": ["*://*/*"]
    }
  ]
}
